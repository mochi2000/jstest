<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <script>
      
      function kaibun(){
        let result = "";
        let source = document.getElementById("source").value;
        
        for(let i = 0;i < source.length;i++){
          let a = source.length - i - 1
          result += source.charAt(a)
        }
        document.getElementById("result").textContent = result;
      }

    </script>
  </head>
  <body>
    <input id="source"/>
    <button onclick="kaibun()">回文</button>
    <p id="result"></p>
  </body>
</html>
